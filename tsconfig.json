{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["ES7", "ESNext"],
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strict": true,
    "isolatedModules": false,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": false
  },
  "include": ["src/**/*.ts", "src/system/typeorm/datasource.ts"],
  "exclude": ["node_modules", "dist"]
}
